#!/usr/bin/python3.5
# vim:encoding=utf-8:ts=2:sw=2:expandtab

from acnpython35 import *

try:
  print()
  if not exists('/etc/.git'):
    print('WARNING: /etc not tracked by .git. Please abort and run `acn-setup-etcgit`.')
    print()
  
  
  if GetInput_YesNo('Install mod_wsgi for python 3.3 (DEF)? ', Default='yes'):
    call(('yum', 'install', '--enablerepo=ius-testing') + Config.mod_wsgi.PackageList)
    print('   ... done')
    print()

  
  while True:
    if GetInput_YesNo('Build/rebuild mod_wsgi configuration (DEF)? ', Default='yes'):
      try:
       
        print('--- WRITING /etc/httpd/conf.d/python33-mod_wsgi.conf ---')
        data = ReadSystemFile('etc/httpd/conf.d/python33-mod_wsgi.conf')
        WriteSystemFile('etc/httpd/conf.d/python33-mod_wsgi.conf', data)
        print('   ... done')
        print()
        
        if GetInput_YesNo('Run `service httpd configtest` (DEF)? ', Default='yes'):
          if call(('service', 'httpd', 'configtest')) > 0:
            print()
            print('ERRORS were found during configest.  Will give you a chance to rebuild.')
            print('Please note that /etc/httpd/conf/httpd.conf HAS BEEN INSTALLED.')
            print()
            continue

      except KeyboardInterrupt:
        print()
        print()
        continue
    break

  
  if GetInput_YesNo('Restart apache? (DEF)? ', Default='yes'):
    check_call(('service', 'httpd', 'restart'))
    print('   ... done')
    print()

 
  print()
  print()


except Exception as e:
  print()
  print()
  print('*** Fatal Error ***')
  print(e)
  print()
except KeyboardInterrupt:
  print()  
  print()
  print('*** User Abort ***')
  print()
