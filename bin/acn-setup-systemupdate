#!/usr/bin/python3.5
# vim:fileencoding=utf-8:ts=2:sw=2:expandtab

from acnpython35 import *

try:
  print()
  if not exists('/etc/.git'):
    print('WARNING: /etc not tracked by .git. Please abort and run `acn-setup-etcgit`.')
    print()
  
  
  if GetInput_YesNo('Full system upgrade? '):
    call(('yum', 'upgrade'))
    print('   ... done')
    print()
  
  if GetInput_YesNo('Restart system? '):
    call(('shutdown', '-r', 'now'))
    print('   ... done')
    print()

  print()
  print()


except Exception as e:
  print()
  print()
  print('*** Fatal Error ***')
  print(e)
  print()
except KeyboardInterrupt:
  print()  
  print()
  print('*** User Abort ***')
  print()
