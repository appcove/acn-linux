#!/usr/bin/python3
# vim:encoding=utf-8:ts=2:sw=2:expandtab

from acnpython32 import *

try:
  print()
  if not exists('/etc/.git'):
    print('WARNING: /etc not tracked by .git. Please abort and run `acn-setup-etcgit`.')
    print()
  
  print("The Time is: ", end='')
  sys.stdout.flush()
  check_call(('/bin/date'))
  print()

  if GetInput_YesNo("Set the timezone (yes)? ", Default="yes"):
    while True:
      tz = GetInput_Regex("Enter the timezone (US/Eastern): ", Regex="^[a-zA-Z0-9_]+\/[a-zA-Z0-9_]+$", Default="US/Eastern")
      
      if call(('test', '-f', join('/usr/share/zoneinfo', tz))) > 0:
        print("Invalid timezone.")
        print()
        continue
      
      check_call(("sed", "--in-place", "-r", '{s/^ZONE=.*$/ZONE="'+tz.replace('/', r'\/')+'"/}', "/etc/sysconfig/clock"))
      check_call(('/usr/sbin/tzdata-update'))      

      break
    pass#while

    print()
    print("NOW, the Time is: ", end='')
    sys.stdout.flush()
    check_call(('/bin/date'))
    print()
  pass#if 
    
except Exception as e:
  raise
  print()
  print()
  print('*** Fatal Error ***')
  print(e)
  print()
except KeyboardInterrupt:
  print()  
  print()
  print('*** User Abort ***')
  print()
